#include <stdio.h>
int main(void)
{
    int num1, num2, result;
    printf("first number: ");
    scanf("%d", &num1);
    printf("\nsecond number: ");
    scanf("%d", &num2);
    if(num2 < 0)
        printf("Invalid power");
    else if(num2 == 0 )
        result = 1;
    else
    {
        result = num1;
        for( int i = num2-1; i > 0; i-- )
        {
            result = result * num1;
        }
        printf("\n%d raised to the power %d is %d\n", num1, num2, result);
    }
}
