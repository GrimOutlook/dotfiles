#ifndef MENU_H
#define MENU_H

#include <Input.h>
#include <Display.h>
#include <Options.h>

void main_menu( struct Snake* snake )
{
    // prompt to start game or change options
    char main_menu_prompt[] = "Main Menu\r\n1.) Start new game\r\n2.) Options\0";
    char chosen_option;

    outputPrompt( main_menu_prompt );

    do
    {
        recieveChar(*chosen_option);
    } while( chosen_option != '1' && chosen_option != '2' );

    switch( chosen_option )
    {
        case '2': options_menu();
        case '1': return;
    }
}


void options_menu()
{
    // Change dimensions of game, change item block chars, change update speed, change mode of control
    char options_menu_prompt[] = "Options\r\n1.) Change game dimensions\r\n2.) Change update speed\r\n3.) Toggle bad blakcs\r\n4.) Change mode of control\r\n5.) Change snake body char\r\n6.) Change food block char\r\n7.) Change wall block char\r\n8.) Quit options menu\0";
    char chosen_option;

    do
    {
        recieveChar(*chosen_option);
        switch( chose_option )
        {
            case '1':   changeDimensions();
                        break;
            case '2':   changeUpdateSpeed();
                        break;
            case '3'    toggleBadBlocks();
                        break;
            case '4':   changeModeOfControl();
                        break;
        }
    } while( chosen_option != '8' ); // While not quit option
}
#endif
